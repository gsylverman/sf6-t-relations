{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Card: {{ dump(data) }}! âœ…</h1>
    {% for key, card in data %}
        <div>
            {{ key+1 }}.
            <div>  {{ card.name }}</div>
            {% if card.valid %}
                <div>Valid Card</div>
            {% endif %}
            {{ card.createdAt |format_datetime('none', 'short', locale='en') }}
            <div>Created at:  {{ card.createdAt |format_datetime('none', 'short', locale='en') }} </div>
            <div>Updated at: {{ card.updatedAt |format_datetime('none', 'short', locale='en') }}  </div>
            {% endfor %}
        </div>
</div>
{% endblock %}
